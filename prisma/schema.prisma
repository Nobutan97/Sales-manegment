generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Salesperson {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  activities Activity[]
}

model Activity {
  id           String     @id @default(uuid())
  date         DateTime
  approaches   Int        @default(0)
  prospects    Int        @default(0)
  meetings     Int        @default(0)
  contracts    Int        @default(0)
  salesperson  Salesperson @relation(fields: [salespersonId], references: [id], onDelete: Cascade)
  salespersonId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([date, salespersonId])
} 